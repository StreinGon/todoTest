{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "es7",
            "es2015.promise"
        ],
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
}